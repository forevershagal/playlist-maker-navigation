<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button_activity_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_from_edges</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>>
        <item name="android:backgroundTint">@color/white</item>>
        <item name="android:foreground">?attr/selectableItemBackground</item>>
        <item name="android:insetTop">0dp</item>>
        <item name="android:insetBottom">0dp</item>>
        <item name="android:textAllCaps">false</item>>
        <item name="android:textColor">@color/black</item>>
        <item name="android:textSize">@dimen/primary_text_size</item>>
        <item name="cornerRadius">@dimen/button_radius</item>>
        <item name="iconGravity">textStart</item>>
        <item name="iconPadding">@dimen/padding_icon</item>>
        <item name="iconTint">@color/black</item>>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginBottom">24dp</item>>
    </style>>

    <style name="settings_switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textSize">@dimen/settings_primary_text_size</item>
    </style>


    <style name="settings_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textSize">@dimen/settings_primary_text_size</item>
    </style>


</resources>
